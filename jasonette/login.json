{
  "$jason": {
    "head": {
      "title": "login"
    },
    "body": {
      "style": {
        "border": "none",
        "background": "#646464"
      },
      "header": {
        "title": "Sign in",
        "style": {
          "background": "#646464",
          "color": "#ffffff"
        }
      },
      "sections": [{
        "items": [{
          "type": "space",
          "height": "10"
        }, {
          "type": "textfield",
          "name": "credentialCode",
          "style": {
            "size": "20",
            "color": "#8bb92d",
            "font": "HelveticaNeue-Bold",
            "background": "#575757",
            "padding": "20"
          },
          "placeholder": "enter credential code"
        }, {
          "type": "space",
          "height": "5"
        }, {
          "type": "textfield",
          "name": "password",
          "placeholder": "enter password",
          "style": {
            "size": "20",
            "color": "#8bb92d",
            "font": "HelveticaNeue-Bold",
            "background": "#575757",
            "padding": "20",
            "secure": "true"
          }
        }, {
          "type": "space",
          "height": "5"
        }, {
          "type": "label",
          "style": {
            "width": "100%",
            "align": "right",
            "font": "HelveticaNeue-Bold",
            "size": "20",
            "padding": "10",
            "background": "#8bb92d",
            "color": "#ffffff"
          },
          "text": "Sign in >",
          "action": {
            "type": "$network.request",
            "options": {
              "url": "http://ec3a1990.ngrok.io/auth/{{$get.credentialCode}}/{{$get.password}}",
              "method": "get"
            },
            "success": {
              "type": "$session.set",
              "options": {
                "domain": "http://ec3a1990.ngrok.io",
                "header": {
                  "Content-Type": "application/json",
                  "X-callref": "{{$get.password}}",
                  "X-programmeKey": "{{$get.credentialCode}}|996141146944271",
                  "authorization": "{{$jason.authorization}}"
                }
              },
              "success": {
                "type": "$href",
                "options": {
                  "url": "https://raw.githubusercontent.com/jialutu/ixaris/master/jasonette/corporations.json",
                  "transition": "replace"
                }
              }
            },
            "error": {
              "type": "$util.banner",
              "options": {
                "title": "Error",
                "description": "Something went wrong. Please check if you entered your credential code and password correctly"
              }
            }
          }
        }]
      }]
    }
  }
}
