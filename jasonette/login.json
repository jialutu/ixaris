{
  "$jason": {
    "head": {
      "title": "login"
    },
    "body": {
      "style": {
        "border": "none",
        "background": "#646464"
      },
      "header": {
        "title": "Sign in",
        "style": {
          "background": "#646464",
          "color": "#ffffff"
        }
      },
      "sections": [{
        "items": [{
          "type": "space",
          "height": "10"
        }, {
          "type": "textfield",
          "name": "credentialCode",
          "style": {
            "size": "20",
            "color": "#8bb92d",
            "font": "HelveticaNeue-Bold",
            "background": "#575757",
            "padding": "20"
          },
          "placeholder": "enter credential code"
        }, {
          "type": "space",
          "height": "5"
        }, {
          "type": "textfield",
          "name": "password",
          "placeholder": "enter password",
          "style": {
            "size": "20",
            "color": "#8bb92d",
            "font": "HelveticaNeue-Bold",
            "background": "#575757",
            "padding": "20",
            "secure": "true"
          }
        }, {
          "type": "space",
          "height": "5"
        }, {
          "type": "label",
          "style": {
            "width": "100%",
            "align": "right",
            "font": "HelveticaNeue-Bold",
            "size": "20",
            "padding": "10",
            "background": "#8bb92d",
            "color": "#ffffff"
          },
          "text": "Sign in >",
          "action": {
            "type": "$network.request",
            "options": {
              "url": "https://app-gateway.hackathon.ixaris.com/api/auth/login",
              "method": "post",
              "data" : {
                  "programmeId": "996141146944271",
                  "credentialCode": "team-16",
                  "password": "1No2EXk&"
                },
                "header" : {
                  "Content-Type": "application/json",
                  "X-callref": "1No2EXk&",
                  "X-programmeKey": "team-16|996141146944271"
                }
            },
            "success": {
              "type": "$session.set",
              "options": {
                "domain": "http://ec3a1990.ngrok.io",
                "header": {
                  "Content-Type": "application/json",
                  "X-callref": "{{$jason.email}}",
                  "X-programmeKey": "{{$get.credentialCode}}|996141146944271",
                  "authorization": "{{$jason.token}}"
                }
              },
              "success": {
                "type": "$href",
                "options": {
                  "url": "http://ec3a1990.ngrok.io/posts.json",
                  "transition": "replace"
                }
              }
            },
            "error": {
              "type": "$util.banner",
              "options": {
                "title": "Error",
                "description": "Something went wrong. Please check if you entered your credential code and password correctly"
              }
            }
          }
        }, {
          "type": "label",
          "style": {
            "size": "16",
            "font": "HelveticaNeue-Bold",
            "text": "or",
            "padding": "10",
            "align": "center"
          }
        }, {
          "type": "label",
          "text": "Sign up >",
          "style": {
            "align": "right",
            "size": "20",
            "padding": "10",
            "font": "HelveticaNeue-Bold",
            "color": "#ffffff"
          },
          "action": {
            "type": "$network.request",
            "options": {
              "url": "https://app-gateway.hackathon.ixaris.com/api/auth/login",
              "method": "post",
              "data" : {
                  "programmeId": "996141146944271",
                  "credentialCode": "team-16",
                  "password": "1No2EXk&"
                },
                "header" : {
                  "Content-Type": "application/json",
                  "X-callref": "1No2EXk&",
                  "X-programmeKey": "team-16|996141146944271"
                }
            },
            "success": {
              "type": "$session.set",
              "options": {
                "domain": "http://ec3a1990.ngrok.io",
                "header": {
                  "Content-Type": "application/json",
                  "X-callref": "{{$jason.email}}",
                  "X-programmeKey": "{{$get.credentialCode}}|996141146944271",
                  "authorization": "{{$jason.token}}"
                }
              },
              "success": {
                "type": "$href",
                "options": {
                  "url": "http://ec3a1990.ngrok.io/posts.json",
                  "transition": "replace"
                }
              }
            },
            "error": {
              "type": "$util.banner",
              "options": {
                "title": "Enter credentials",
                "description": "Please enter both credential code and password"
              }
            }
          }
        }]
      }]
    }
  }
