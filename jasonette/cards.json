{
  "$jason": {
    "head": {
      "actions": {
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "http://ec3a1990.ngrok.io/cards"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": "All cards",
            "style": {
              "background": "#646464",
              "color": "#ffffff"
            }
          },
          "sections": [{
            "items": {
              "{{#each $jason.cards}}": {
                "type": "vertical",
                "style": {
                    "padding": "16"
                  },
                "components": [
                  {
                    "type": "image",
                    "url": "https://github.com/jialutu/ixaris/blob/master/170125-halifax-clarity-card_d_1x.png?raw=true",
                    "action": {
                      "type": "$href",
                      "options": {
                        "url": "http://6c4cc477.ngrok.io/card",
                        "method": "get",
                        "data": {
                          "id": "{{id.id}}"
                        }
                      },
                      "success": {
                        "type": "$render"
                      }
                    }
                  },
                  {
                    "type": "label",
                    "text": "Card number: {{cardNumber}}",
                    "style": {
                      "font": "HelveticaNeue-Bold",
                      "size": "16"
                    }
                  },
                  {
                    "type": "label",
                    "text": "ID: {{id.id}}",
                    "style": {
                      "font": "HelveticaNeue",
                      "size": "16"
                    }
                  }
                ]
              }
            }
          }]
            ,
            "footer": {
              "tabs": {
                "style": {
                  "background": "rgba(255,255,255,0.8)",
                  "color": "#000000"
                },
                "items": [
                  {
                    "image": "https://raw.githubusercontent.com/Jasonette/Instagram-UI-example/master/images/home.png",
                    "style": {
                      "height": "21"
                    },
                    "url": "https://raw.githubusercontent.com/jialutu/ixaris/master/jasonette/corporations.json"
                  },
                  {
                    "image": "https://raw.githubusercontent.com/Jasonette/Instagram-UI-example/master/images/profile.png",
                    "style": {
                      "height": "21"
                    },
                    "url": "https://raw.githubusercontent.com/jialutu/ixaris/master/jasonette/accounts.json"
                  },
                  {
                    "image": "https://raw.githubusercontent.com/Jasonette/Instagram-UI-example/master/images/camera.png",
                    "style": {
                      "height": "21"
                    },
                    "url": "https://raw.githubusercontent.com/jialutu/ixaris/master/jasonette/cards.json"
                  }
                ]
              }
            }
        }
      }
    }
  }
}